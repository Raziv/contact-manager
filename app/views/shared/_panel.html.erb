<% @contacts.each do |contact| %>
  <div class="row panelRow">
    <div class="col-sm-3">
      <%= link_to contact.name, contact_path(contact), class: "contactName" %>
    </div>
    <div class="col-sm-3">
      <%= contact.email %>
    </div>
    <div class="col-sm-3">
      <%= contact.phone %>
    </div>
    <div class="col-sm-3">
      <%= link_to edit_contact_path(contact), class: "glyphIconStyle", title: "Edit" do %>
        <i class="glyphicon glyphicon-edit"></i>
      <% end %>
      <%= link_to text_path(contact), class: "glyphIconStyle", title: "Sms" do %>
        <i class="glyphicon glyphicon-phone"></i>
      <% end %>
      <%= link_to contact_path(contact), method: :delete, class: "glyphIconStyle",
                data: { confirm: "You sure?" }, title: "Delete" do %>
        <i class="glyphicon glyphicon-remove"></i>
      <% end %>
    </div>
  </div>
<% end %>
